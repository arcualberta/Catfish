@model Catfish.Core.Models.Contents.Fields.DecimalField

@Html.HiddenFor(model => model.ModelType)
@Html.HiddenFor(model => model.Id)

@if (Model.Exclude)
    return;

@{
    var viewData = new Dictionary<string, object>(); ;
    foreach (var key in ViewData.Keys)
        viewData.Add(key, ViewData[key]);
    viewData.Add("type", "number");
    viewData.Add("step", 0.01);

    for (int i = 0; i < Model.Values.Count; ++i)
    {
        @Html.HiddenFor(model => model.Values[i].Id)
        @Html.TextBoxFor(model => Model.Values[i].DecimalValue, viewData)
    }
}