@model Catfish.Core.Models.Contents.Fields.RadioField

@{
    var options = Model.Options.Select(a =>
            new SelectListItem
            {
                Value = a.Id.ToString(),
                Text = a.OptionText.GetConcatenatedContent(" | ")
            }).ToList();

    @Html.HiddenFor(model => model.ModelType)
    @Html.HiddenFor(model => model.Id)
    @for (int i = 0; i < Model.Options.Count; ++i)
    {
        @Html.RadioButtonFor(model => model, Model.Options[i].Id.ToString());
        @Html.Raw(string.Format("<span class='radio-option-label'>{0}</span>", Model.Options[i].OptionText.GetConcatenatedContent(" | ")));
    }

}