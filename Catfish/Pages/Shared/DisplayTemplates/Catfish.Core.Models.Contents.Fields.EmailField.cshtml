@model Catfish.Core.Models.Contents.Fields.EmailField

<div class="control field-label @Model.FieldLabelCssClass">@Html.DisplayFor(model => model.Name, Model.Name.GetType().ToString())</div>

@{
    var values = string.Join(", ", Model.Values.Select(val => "<span>" + val.Value + "</span>"));
}
<div class="field-value @Model.CssClass @Model.FieldValueCssClass">
    @Html.Raw(values)
</div>