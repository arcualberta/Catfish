@model Catfish.Core.Models.Contents.Fields.SelectField;


<div class="control">@Html.DisplayFor(model => model.Name, Model.Name.GetType().ToString())</div>
<div class="text-content">
    @{
        var selectedOptionNames = Model.Options.Where(op => op.Selected).Select(op => op.OptionText).FirstOrDefault();

        if (selectedOptionNames == null)
        {
            @Html.Raw("Not selected")
        }
        else
        {
            @selectedOptionNames.GetConcatenatedContent(" | ")
        }
    }
</div>