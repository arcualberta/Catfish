@model Catfish.Areas.Applets.Blocks.KeywordSearch
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@inject Piranha.AspNetCore.Services.IModelLoader _loader;

@{
    var viewData = new ViewDataDictionary(this.ViewData)
    {
        { "data-display-format", "List" },
        { "data-collection-id", Model.SelectedCollection?.Value },
        { "data-template-id", Model.SelectedItemTemplate?.Value },
        { "data-keyword-metadata-set-id", Model.ClassificationMetadataSetId?.Value },
        { "data-keyword-source-id", Model.KeywordSourceId?.Value }
    };
}
<partial name="Partial/_AppletLoader" view-data="@viewData"/>

