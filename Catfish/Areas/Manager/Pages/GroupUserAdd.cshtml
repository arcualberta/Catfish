@page "~/manager/groups/edit/user/{id:Guid?}"
@model Catfish.Areas.Manager.Pages.GroupUserAddModel
@inject Piranha.Manager.ManagerLocalizer Localizer
@using Microsoft.AspNetCore.Authorization
@inject IAuthorizationService AuthorizationService
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@using Catfish.Core.Models

    <form id="item-edit-form" class="edit-form" method="post" novalidate>
        @*@Html.HiddenFor(m => m.Group.Id)*@
        <div class="top">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item">@Localizer.General["Settings"]</li>
                    <li class="breadcrumb-item">@Localizer.General["Groups"]</li>
                    <li class="breadcrumb-item" aria-current="page"><a href="@string.Format("../{0}", Model.GroupRole.GroupId)">@Localizer.General["Edit"]</a></li>
                    <li class="breadcrumb-item active" aria-current="page">@Localizer.General["Add Users"]</li>
                </ol>
            </nav>

            <div class="container-fluid">
                <div class="top-nav">
                    @if ((await AuthorizationService.AuthorizeAsync(User, Catfish.Areas.Manager.Access.GroupSecurity.Save)).Succeeded)
                    {
                        <button type="submit" class="btn btn-labeled btn-success pull-right">
                            <span class="btn-label">
                                <i class="fas fa-check"></i>
                            </span>
                            @Localizer.General["Save"]
                        </button>
                    }
                </div>
            </div>
        </div>
        <div class="container-fluid">
            <div class="card">
                <div class="card-header">
                    <span class="title">@Localizer.General["Users"]</span>
                </div>
                <div class="card-body">
                    <div class="form-group">
                        <div class="container-fluid">
                            <p>
                                Email: <input type="text" asp-for="Searching" />
                                <input type="submit" value="Filter" />
                            </p>
                            <table class="table table-borderless">
                                <thead>
                                    <tr>
                                        <th>@Localizer.General["User Name"]</th>
                                        <th>@Localizer.General["Email"]</th>
                                        <th class="actions one"></th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @for (int cnt = 0; cnt < Model.Users.Count; ++cnt)
                                    {
                                        @Html.EditorFor(model => model.Users[cnt])

                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
</form>