@page "~/manager/items"
@model Catfish.Areas.Manager.Pages.ItemListModel
@inject Piranha.Manager.ManagerLocalizer Localizer
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers


<div id="itemlist-page">
    <div class="top">
	    <div class="container-fluid top">
            <div class="left-nav-container">
                <div class="top-nav ce">
				    @foreach (var action in Catfish.Areas.Manager.Actions.Toolbars.CollapseExpandList)
				     {
			            <partial name="@action.ActionView" />
				     }
			    </div>
		        <nav aria-label="breadcrumb">
			        <ol class="breadcrumb">
				        <li class="breadcrumb-item">@Localizer.Menu["Entities"]</li>
				        <li class="breadcrumb-item active" aria-current="page">@Localizer.Menu["Items"]</li>
			        </ol>
		        </nav>
            </div>

		    <div class="container-fluid collection-button-holder">
			    <div class="top-nav">
				    @foreach (var action in Catfish.Areas.Manager.Actions.Toolbars.CollectionList)
				    {
					    <partial name="@action.ActionView" />
				    }
			    </div>
		    </div>
	    </div>
    </div>


	<div class="container-fluid app" id="itemlist" :class="{ ready: !loading }"> 
        <div class="row">
            <div class="col">
                <div class="sitemap">
                    <ol v-if="collections.length > 0">
                        <li v-for="(collection, index) in collections">
                            <div class="sitemap-item" v-bind:key="collection.Id">
                                <a v-on:click="toggleDropdown(collection.Id)" class="testme" data-toggle="collapse" :href="['#collapse-' + index ]">
                                    <div class="handle">
                                        <i :class="{ 'fas fa-chevron-down': !dropdowns[collection.Id].isCollapsed, 'fas fa-chevron-right': dropdowns[collection.Id].isCollapsed}"></i>
                                    </div>
                                </a>
                                <div class="link">
                                    <a v-if="piranha.permissions.sites.edit" v-on:click.prevent="piranha.siteedit.open(collection.Id, load)" href="#">{{ collection.Name.Values.$values[0].Value }} <small style="display:none">(<code>{{ collection.Id + collection.Name.Values.$values[0].Value }}</code>)</small></a>
                                    <span v-else class="title">{{ collection.Name.Values.$values[0].Value }} <small style="display:none">(<code>{{ collection.Id + collection.Name.Values.$values[0].Value }}</code>)</small></span>
                                </div>
                                <div>
                                    <div v-if="piranha.permissions.pages.add" class="btn-group" role="group">
                                        <button id="pageGroup" type="button" class="btn btn-sm btn-primary btn-labeled dropdown-toggle"
                                                data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                            <i class="fas fa-plus"></i>
                                            @Localizer.Page["Add item"]
                                        </button>
                                        <div class="dropdown-menu dropdown-menu-right" aria-labelledby="pageGroup">
                                            <a class="dropdown-item" :href="piranha.baseUrl + type.AddURL + collection.Id + '/' + type.Id" v-for="type in itemTypes">{{ type.TypeName }}</a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div :id="['collapse-' + index ]" class="sitemap sitemap-container dd collapse show" data-id="{ collection.Id }">
                                <ol class="dd-list">
                                    <!-- maybe this can be a partial once you learn about them more? -->
                                    <li v-for="item in collection.Items.$values" class="dd-item expanded">
                                        <div class="sitemap-item">

                                            <div class="link">
                                                <a :href="item.Id">{{item.Name.Values.$values[0].Value}}</a> <!--@* <a href="@detailsPage">@Model.TypeName</a>*@ -->

                                            </div>

                                            <div v-if="piranha.permissions.pages.add" class="btn-group" role="group">

                                                <button v-on:click="openEditItem(item.Id)" id="pageGroup" type="button" class="btn btn-sm btn-primary btn-labeled">

                                                    <i class="fas fa-pen"></i>
                                                    @Localizer.Page["Edit"]
                                                </button>
                                            </div>
                                        </div>

                                    </li>
                                </ol>
                            </div>
                        </li>
                    </ol>
                    <ol v-else-if="loading">
                        <li>
                            <div class="sitemap-item">
                                <div class="link">
                                    Loading...
                                </div>
                            </div>
                        </li>
                    </ol>
                    <ol v-else>
                        <li>
                            <div class="sitemap-item">
                                <div class="link">
                                    You have no item collections.
                                </div>
                            </div>
                        </li>
                    </ol>
                </div>
            </div>
        </div>
    </div>

</div>