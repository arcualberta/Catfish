@page "~/manager/items"
@model Catfish.Areas.Manager.Pages.ItemListModel
@inject Piranha.Manager.ManagerLocalizer Localizer
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers


<div id="itemlist-page">
    <div class="top">
	    <div class="container-fluid top">
		    <nav aria-label="breadcrumb">
			    <ol class="breadcrumb">
				    <li class="breadcrumb-item">@Localizer.Menu["Entities"]</li>
				    <li class="breadcrumb-item active" aria-current="page">@Localizer.Menu["Items"]</li>
			    </ol>
		    </nav>

		    <div class="container-fluid">
			    <div class="top-nav">
				    @foreach (var action in Catfish.Areas.Manager.Actions.Toolbars.CollectionList)
				    {
					    <partial name="@action.ActionView" />
				    }
			    </div>
		    </div>
	    </div>
    </div>


	<div class="container-fluid app" id="itemlist" :class="{ ready: !loading }"> 
        <div class="row">
            <div class="col">
                <div class="sitemap">
                    <ol>
                        <li v-for="(collection, index) in collections">
                            <div class="sitemap-item" v-bind:key="collection.id">
                                <a data-toggle="collapse" :href="['#collapse-' + index ]">
                                    <div class="handle">
                                        <i class="fas fa-globe"></i>
                                    </div>
                                </a>
                                <div class="link">
                                    <a v-if="piranha.permissions.sites.edit" v-on:click.prevent="piranha.siteedit.open(collection.id, load)" href="#">{{ collection.name.values[0].value }} <small style="display:none">(<code>{{ collection.id + collection.name.values[0].value }}</code>)</small></a>
                                    <span v-else class="title">{{ collection.name.values[0].value }} <small style="display:none">(<code>{{ collection.id + collection.name.values[0].value }}</code>)</small></span>
                                </div>
                                <div>
                                    <div v-if="piranha.permissions.pages.add" class="btn-group" role="group">
                                        <button id="pageGroup" type="button" class="btn btn-sm btn-primary btn-labeled dropdown-toggle" 
                                                data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                            <i class="fas fa-plus"></i>
                                            @Localizer.Page["Add item"]
                                        </button>
                                        <div class="dropdown-menu dropdown-menu-right" aria-labelledby="pageGroup">
                                            <a class="dropdown-item" :href="piranha.baseUrl + type.addUrl + collection.id + '/' + type.id" v-for="type in itemTypes">{{ type.typeName }}</a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div :id="['collapse-' + index ]" class="sitemap sitemap-container dd collapse show" data-id="{ collection.id }">
                                <ol class="dd-list">
                                    <!-- maybe this can be a partial once you learn about them more? -->
                                    <li v-for="item in collection.items" class="dd-item expanded">
                                        <div class="sitemap-item">
                                            <div class="handle dd-handle">
                                                <i class="fas fa-ellipsis-v"></i>
                                            </div>
                                            <div class="link"> {{item.name.values[0].value}}
                                             @*   <a href="@detailsPage">@Model.TypeName</a> *@
                                            </div>
                                        </div>
                                    </li>

                                </ol>
                            </div>
                        </li>
                    </ol>
                </div>
            </div>
        </div>
    </div>

</div>