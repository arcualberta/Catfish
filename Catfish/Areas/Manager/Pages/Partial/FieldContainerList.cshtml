@model Catfish.Areas.Manager.Pages.ListPageModel
@inject Piranha.Manager.ManagerLocalizer Localizer
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

    <div id="list-page">
        <div class="top">
            <div class="container-fluid top">
                <div class="left-nav-container">
                    <div class="top-nav ce">
                        @foreach (var action in Catfish.Areas.Manager.Actions.Toolbars.CollapseExpandList)
                        {
                            <partial name="@action.ActionView" />
                        }
                    </div>
                    <nav aria-label="breadcrumb">
                        <ol class="breadcrumb">
                            <li class="breadcrumb-item">@Localizer.Menu["Templates"]</li>
                            <li class="breadcrumb-item active" aria-current="page">@Localizer.Menu[Model.ModelLabel]</li>
                        </ol>
                    </nav>
                </div>

                <div class="container-fluid collection-button-holder">
                    <div class="top-nav">
                        @foreach (var action in Catfish.Areas.Manager.Actions.Toolbars.FormList)
                        {
                            <partial name="@action.ActionView" />
                        }
                    </div>
                </div>
            </div>
        </div>

        <div>Api URL: @Model.ApiRoot</div>

        <ol>
            @foreach (var entry in ViewData["data"] as List<Catfish.Core.Models.Contents.FieldContainer>)
            {
                var detailsUrl = Model.DetailsPage + entry.Id;
                var editUrl = Model.EditPage + entry.Id;
                <li>
                    <a href="@detailsUrl">@entry.Id</a>
                    &nbsp;&nbsp;&nbsp;&nbsp;
                    <a href="@editUrl">Edit</a>
                </li>
            }
        </ol>
    </div>



