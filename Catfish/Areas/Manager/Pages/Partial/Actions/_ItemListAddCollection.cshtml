@inject Microsoft.AspNetCore.Authorization.IAuthorizationService Auth
@inject Piranha.Manager.ManagerLocalizer Localizer

@*@if ((await Auth.AuthorizeAsync(User, Piranha.Manager.Permission.SitesAdd)).Succeeded)
    {*@
        <button v-on:click.prevent="piranha.siteedit.create(load)" class="btn btn-primary btn-labeled dropdown-toggle">
            <i class="fas fa-plus"></i>
            @Localizer.Site["New Collection"]
        </button>
        <div class="dropdown-menu dropdown-menu-right" aria-labelledby="pageGroup">
            <a class="dropdown-item" :href="piranha.baseUrl + type.addURL + '/' + type.id" v-for="type in itemTypes">{{ type.typeName }}</a>
        </div>
    @*}*@

