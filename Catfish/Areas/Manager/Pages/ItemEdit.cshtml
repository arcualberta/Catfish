@page "~/manager/items/edit/{id:Guid}"
@inject Piranha.Manager.ManagerLocalizer Localizer
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<div id="item-edit-page">
    <div class="top">
	    <div class="container-fluid top">
            <div class="left-nav-container">
		        <nav aria-label="breadcrumb">
			        <ol class="breadcrumb">
				        <li class="breadcrumb-item">@Localizer.Menu["Entities"]</li>
				        <li class="breadcrumb-item">@Localizer.Menu["Items"]</li>
						<li v-if="nameAttribute" class="breadcrumb-item active" aria-current="page">{{itemName}}</li>
			        </ol>
		        </nav>
            </div>
	    </div>
    </div>


	<div v-for="section in sections" class="container-fluid app" id="itemlist" :class="{ ready: !loading }"> 
       <div class="row">
            <div class="col">
                <div class="sitemap">
                    <ol v-if="section.values">
                        <li>
                            <div class="sitemap-item">
                                <div class="link">
                                    <span class="title">{{section.title}}</span>
                                </div>
                                <div>
                                    <div v-if="piranha.permissions.pages.add" class="btn-group" role="group">
                                        <button id="add-new-name" type="button" v-on:click="addNewEntry(section.title)" class="btn btn-sm btn-primary btn-labeled">
                                            <i class="fas fa-plus"></i>
                                        </button>
                                    </div>
                                </div>
                            </div>
                            <div class="sitemap sitemap-container dd collapse show" data-id="{ 0 }"> <!-- v-for="let set of entrySets" -->
                               <ol class="dd-list">
                                    <li v-for="(entry, index) in section.values" class="dd-item expanded">
                                        <div class="sitemap-item">
                                            <div class="link">
                                                <label :id="['entry-label-' + section.title + '-' + languageLabels[index]]" class="language-label" for="input-0">{{languageLabels[index]}}:</label>
                                                <input type="text" class="form-control" :id="[section.title + '-input-' + index]" aria-describedby="entry-label" :value="entry.value">
                                            </div>
                                        </div>
                                    </li>
                                </ol>

                               <div v-if="piranha.permissions.pages.add" class="btn-group trash-button-holder" role="group">
                                    <button v-on:click="deleteSet(item.id)" id="pageGroup" type="button" class="btn btn-sm btn-primary btn-labeled trash-button">
                                        <i class="fas fa-trash"></i>
                                    </button>
                               </div>

                            </div>

                        </li>
                    </ol>
                </div>
            </div>
        </div>
    </div>

    <div class="container-fluid app" :class="{ ready: !loading }">
        <div class="row">
            <div class="col">
                <div class="sitemap-item">
                    <div class="link">
                        <span class="title">{{metadataSetLabel}}</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
    
    <div class="container-fluid tab-holder">
        <div class="row">
            <div class="col">
                <nav>
                    <div class="nav nav-tabs" id="nav-tab" role="tablist">
                        <a v-for="metadataSet in metadataSets" class="nav-item nav-link active" id="nav-home-tab" data-toggle="tab" href="#nav-home" role="tab" aria-controls="nav-home" aria-selected="true">{{metadataSet.name.values[0].value}}</a>
                    </div>
                </nav>
                <div v-for="metadataSet in metadataSets" class="tab-content" id="nav-tabContent">
                    <div v-for="field in metadataSet.fields" :class="{active: true}"
                         class="tab-pane fade show field-section"
                         id="nav-home" role="tabpanel" aria-labelledby="nav-home-tab"> <!-- manage the active tab or all will be active... -->
                        <div class="flex-row" v-for="(val, index) in field.name.values">
                            <div>{{field.name.values[index].value}}</div>
                            <button type="button" class="btn-sm btn-primary btn-circle" 
                                    data-toggle="tooltip" data-placement="top" 
                                    :title="field.description.values[index].value">
                                <i class="fas fa-question"></i>
                            </button>
                            <input type="text" class="form-control" v-if="field.modelType.includes(inputTypes.text)">
                            <!--<div v-else-if="false==true"></div>
                            <div v-else-if="false==true"></div>-->
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

</div>