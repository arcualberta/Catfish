@page "~/manager/items/{id:Guid}"
@model Catfish.Areas.Manager.Pages.ItemModel
@inject Piranha.Manager.ManagerLocalizer Localizer
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<div id="entityTypelist">
    <div class="top">
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item">@Localizer.Menu["Items"]</li>
                <li class="breadcrumb-item active" aria-current="page">@Localizer.Menu["Item"]</li>
            </ol>
        </nav>

        <div class="container-fluid">
            <div class="top-nav">
                @foreach (var action in Catfish.Areas.Manager.Actions.Toolbars.EntityTypeList)
                {
                    <partial name="@action.ActionView" />
                }
            </div>
        </div>
    </div>

    <div class="container-fluid">
        @Model.Item.Name.GetConcatenatedContent(" | ")
        @*<ol class="dd-list">
                @foreach (var child in Model.Children)
                {
                    <partial name="partial/@child.GetType().Name" model="@child" />
                }
            </ol>*@
    </div>
</div>
