@model Catfish.Core.Services.FormIngestionViewModel

@{
    ViewBag.Title = "Ingest Form";
}

@section HEAD
{
    <link rel="stylesheet" type="text/css" href="~/Content/Css/catfish.css">
}

@section Toolbar {
    @Html.Partial("Partial/Tabs")
    <div class="toolbar">
        <div class="inner">
            <ul>
                <li>
                    <a id="toolbar_refresh_button" href="@Url.Action("ingest")" class="refresh">
                        @Piranha.Resources.Global.ToolbarReload
                    </a>
                </li>
            </ul>
            <div class="clear"></div>
        </div>
    </div>
}
<div class="grid_12 bs">
    @if (!string.IsNullOrEmpty(Model.Error))
    {
        <div class="alert alert-danger">@Model.Error</div>
    }
    <div class="box">
        <div class="title">
            Google Spreadsheet Information
        </div>
        <div class="inner">
            @using (Html.BeginForm("Ingest", "FormTemplates", FormMethod.Post, new { enctype = "multipart/form-data" }))
            {
                @Html.EditorForModel()
            }
        </div>
    </div>
</div>


