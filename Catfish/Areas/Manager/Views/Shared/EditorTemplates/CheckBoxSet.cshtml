@model Catfish.Core.Models.Metadata.CheckBoxSet

@Html.Hidden("ModelType", Model.GetType().AssemblyQualifiedName, new Dictionary<string, object>()
{
    {"class", "model-type"}
})
@Html.HiddenFor(m => m.Ref)

<div class="form-field-header">
    @Html.Label(Model.Name)
</div>

<div class="form-field-content">
    <ul>
        @foreach (var option in Model.Options.Split('\n'))
            {
            <li class="no-background-border">
                @Html.CheckBox(Model.Id.ToString(), new { value = option, @class = "auto-width" })
                <span>@option</span>
            </li>
        }
    </ul>
</div>

