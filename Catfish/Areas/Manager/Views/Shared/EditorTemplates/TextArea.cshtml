@model Catfish.Core.Models.Metadata.TextArea

@Html.Hidden("ModelType", Model.GetType().AssemblyQualifiedName, new Dictionary<string, object>()
{
    {"class", "model-type"}
})
@Html.HiddenFor(m => m.Ref)

@{ 
    var required = Model.IsRequired ? "required" : "false";
}
<div>
    @Html.Label(Model.Name)
    @Html.TextAreaFor(m => m.Value, new { @required = required })
</div>

