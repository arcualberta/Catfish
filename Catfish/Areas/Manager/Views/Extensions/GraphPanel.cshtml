@model Catfish.Models.Regions.GraphPanel
<style>
    .input select {
        background: #efeeee85;
        border-radius: 2px;
        padding-right:5px;
    }
</style>
<ul class="form">
    
    @Html.Partial("_CatfishRegion", Model)
    <li>
        @Html.LabelFor(m => m.GraphTitle)
