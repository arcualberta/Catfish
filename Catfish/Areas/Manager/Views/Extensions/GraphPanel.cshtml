            @Html.DropDownListFor(m => m.XaxisField, new SelectList(Model.MetadataFields, "Value", "Text"), new {@style="width:auto" })
       </div>
    </li>
    <li>
        @Html.LabelFor(m => m.YaxisLabel)
        <div class="input">
            @Html.EditorFor(m => m.YaxisLabel)
        </div>
    </li>
    <li>
        @Html.LabelFor(m => m.MinX_Parameter)
        <div class="input">
            @Html.EditorFor(m => m.MinX_Parameter)       
        </div>
    </li>
    <li>
        @Html.LabelFor(m => m.MaxX_Parameter)
        <div class="input">
            @Html.EditorFor(m => m.MaxX_Parameter)
        </div>
    </li>
    <li>
        @Html.LabelFor(m => m.XScale)
