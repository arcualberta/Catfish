            @Html.EditorFor(m => m.XScale)
        </div>
    </li>
    <li>
        @Html.LabelFor(m => m.YScale)
        <div class="input">
            @Html.EditorFor(m => m.YScale)
        </div>
    </li>
    <li>
        @Html.LabelFor(m => m.YaxisField)
        <div class="input">
            @Html.DropDownListFor(m => m.SelectedMetadataSetY, new SelectList(Model.ListMetadataSets, "Value", "Text"), new { @style = "width:auto;", @class = "dropdown" })
            @Html.DropDownListFor(m => m.YaxisField, new SelectList(Model.MetadataFields, "Value", "Text"), new { @style = "width:auto" })
        </div>
    </li>
    <li>
        @Html.LabelFor(m => m.Category)
        <div class="input">
            @Html.DropDownListFor(m => m.SelectedMetadataSetCat, new SelectList(Model.ListMetadataSets, "Value", "Text"), new { @style = "width:auto;", @class = "dropdown" })
            @Html.DropDownListFor(m => m.Category, new SelectList(Model.MetadataFields, "Value", "Text"), new { @style = "width:auto" })
        </div>
    </li>
    <li>
        @Html.LabelFor(m => m.SelectedGraphType)
        <div class="input">
            @Html.DropDownListFor(m => m.SelectedGraphType, new SelectList(Model.GraphTypes, "Value", "Text"), new { @style = "width:auto;", @class = "dropdown" })
           
        </div>
    </li>
    <li>
        @Html.LabelFor(m => m.QueryResult)
        <div class="input">
           @Html.EditorFor(m=>m.QueryResult)
        </div>
    </li>
</ul>

