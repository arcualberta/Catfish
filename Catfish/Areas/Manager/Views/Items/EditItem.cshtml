<div class="container">
@{ int idx = 0;}

    <ul class="tabs">
        @foreach (var name in Model.MetadataSets.Select(ms => ms.GetName()))
        {
            <li class="tab-link @(idx == 0 ? "current" : "")" data-tab="tab-@idx">@name</li>
            ++idx;
        }
    </ul>
    @{ idx = 0;}
    @foreach (var ms in Model.MetadataSets)
    {
        <div id="tab-@idx" class="tab-content @(idx == 0 ? "current" : "")">
            @Html.EditorFor(m => ms, "MetadataInput")
        </div>
        ++idx;
    }
</div>

<div id="drop-zone" style="width: 100%; height:200px; background-color:blueviolet">Drop files here</div>
<ul id="file-list" data-bind="foreach: files">
    <li>
        <span data-bind="text: name"></span>
        <a href="#" data-bind="click: $parent.removeFile">X</a>
        <span type="hidden" id="" name="" data-bind="text: $data.source"> </span>
    </li>
</ul>

