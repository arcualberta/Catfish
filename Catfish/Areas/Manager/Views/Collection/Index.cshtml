@model System.Collections.Generic.IEnumerable<Catfish.Models.Entities.Collection>

@section Toolbar {
    @Html.Partial("Partial/Tabs")
    <div class="toolbar">
        <div class="inner">
            <ul>
                <li>
                    <a href="@Url.Action("edit")" class="add">
                        @Piranha.Resources.Global.ToolbarAdd
                    </a>
                </li>
                <li>
                    <a href="@Url.Action("index")" class="refresh">
                        @Piranha.Resources.Global.ToolbarReload
                    </a>
                </li>
            </ul>
            <button class="search" title="@Piranha.Resources.Global.ToolbarSearch"></button>
            @Html.TextBox("search")
            <div class="clear"></div>
        </div>
    </div>
}
<div class="grid_12">
    <table class="list">
        <thead>
            <tr>
                <th>Name</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var collection in Model) {
                <tr>
                    <td><a href="@Url.Action("edit", new { @id = collection.Id })">@collection.Name</a></td>
                    <td></td>
                </tr>
      }
        </tbody>
    </table>
</div>
