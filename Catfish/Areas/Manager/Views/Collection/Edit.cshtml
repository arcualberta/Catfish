@model Catfish.Models.Entities.Collection

@section Toolbar {
    @Html.Partial("Partial/Tabs")
    <div class="toolbar">
        <div class="inner">
            <ul>
                <li>
                    <a class="save submit">
                        @Piranha.Resources.Global.ToolbarSave
                    </a>
                </li>
                <li>
                    <a href="@Url.Action("index")" class="back">
                        @Piranha.Resources.Global.ToolbarBack
                    </a>
                </li>
                <li>
                    <a href="@Url.Action("edit", new { id = Model.Id })" class="refresh">
                        @Piranha.Resources.Global.ToolbarReload
                    </a>
                </li>
            </ul>
            <div class="clear"></div>
        </div>
    </div>
}
@{ Html.BeginForm() ; }
@Html.HiddenFor(m => m.Id)
@Html.HiddenFor(m => m.Created)
@Html.HiddenFor(m => m.Updated)
@Html.AntiForgeryToken()
<div class="grid_12">
    <div class="box">
        <div class="title"><h2>Collection Information</h2></div>
        <div class="inner">
            <ul class="form">
                <li>
                    @Html.LabelFor(m => m.Title)
                    <div class="input">@Html.EditorFor(m => m.Title)</div>
                </li>
            </ul>
        </div>
    </div>
</div>
@{ Html.EndForm() ; }
