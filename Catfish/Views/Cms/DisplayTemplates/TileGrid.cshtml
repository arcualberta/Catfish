@model Catfish.Models.Blocks.TileGrid.TileGrid

@inject Piranha.AspNetCore.Services.IApplicationService _webApp

<link href="/assets/dist/tile-grid/css/app.css" rel="preload" as="style">
<link href="/assets/dist/tile-grid/js/app.js" rel="preload" as="script">
<link href="/assets/dist/tile-grid/js/chunk-vendors.js" rel="preload" as="script">
<link href="/assets/dist/tile-grid/css/app.css" rel="stylesheet">


@{
    var pageId = _webApp.PageId;
    var block = Model as Catfish.Models.Blocks.TileGrid.TileGrid;
    var blockId = block.Id;
    var collectionId = block.SelectedCollection.Value;
}
<script>
    var blockId = @(Model as Piranha.Extend.Block)?.Id;
    var pageId = @_webApp.PageId;
</script>

<noscript>
    <strong>We're sorry but tile-grid doesn't work properly without JavaScript enabled. Please enable it to continue.</strong>
</noscript>

<div id="app" block-id="@blockId" page-id="@pageId" collection-id="@collectionId">

</div>
<script src="/assets/dist/tile-grid/js/chunk-vendors.js"></script>
<script src="/assets/dist/tile-grid/js/app.js"></script>