@inject Piranha.IApi _piranhaApi;
@{

    var site = await _piranhaApi.Sites.GetByInternalIdAsync("Default");//"Default" is InternalId of the site


}
<link href="~/assets/css/CustomStyle.css" rel="stylesheet" />
<div class="row">
    <div id="site-logo"></div>
    <div class="header-brand">
        <h1>@site.Title</h1>
        <h3>@site.Description</h3>
    </div>
</div>
<header class="site-header  @(ViewBag.HasImage == null || !ViewBag.HasImage ? "site-header-dark" : "")">
    <div class="container">

        <div class="row">
            <div class="col-sm">
                <partial name="Partial/_Menu.cshtml" />
            </div>
            <div class="signinout">
                <button class="btnSignIn">SignIn</button>
                <button class="btnSignOut" onclick="signOut(); return false;">SignOut</button>
            </div>
        </div>

    </div>

</header>