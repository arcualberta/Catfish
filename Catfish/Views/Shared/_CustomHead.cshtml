@inject Piranha.IApi _piranhaApi;
@{

    var site = await _piranhaApi.Sites.GetByInternalIdAsync("Default");//"Default" is InternalId of the site


}
    <div class="main mainHeader">
        <div class="container headerContainer">
            <div class="row">
                <div id="site-logo"></div>
                <div class="header-brand">
                    <h1>@site.Title</h1>
                    <h3>@site.Description</h3>
                </div>
            </div>
            </div>
        </div>
            <header class="site-header  @(ViewBag.HasImage == null || !ViewBag.HasImage ? "site-header-dark" : "")">
                <div class="container">

                    <div class="row">
                        <div class="col-sm">
                            <partial name="Partial/_Menu.cshtml" />
                        </div>
                        <div class="signinout">
                            <button id="btnSignIn" onclick="window.location.href = '/login'; return false;">Sign In</button>
                            @{ if (User.Identity.IsAuthenticated)
                                {
                                    <button id="btnSignOut" onclick="signOut(); return false;">Sign Out</button>
                                }
                            }
                        </div>
                    </div>

                </div>

            </header>
