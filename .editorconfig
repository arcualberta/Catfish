[*.cs]

# CA1051: Do not declare visible instance fields
dotnet_diagnostic.CA1051.severity = none

# CA1031: Do not catch general exception types
dotnet_diagnostic.CA1031.severity = none

# CA1304: Specify CultureInfo
dotnet_diagnostic.CA1304.severity = none

# CA1062: Validate arguments of public methods
dotnet_diagnostic.CA1062.severity = none

# CS0109: Member does not hide an inherited member; new keyword is not required
dotnet_diagnostic.CS0109.severity = none

# CA1303: Do not pass literals as localized parameters
dotnet_diagnostic.CA1303.severity = silent

# CA1055: Uri return values should not be strings
dotnet_diagnostic.CA1055.severity = none

# CA1307: Specify StringComparison
dotnet_diagnostic.CA1307.severity = none

# IDE0043: Invalid format string
dotnet_diagnostic.IDE0043.severity = none

# CA1822: Mark members as static
dotnet_diagnostic.CA1822.severity = none

# Default severity for analyzer diagnostics with category 'Globalization'
dotnet_analyzer_diagnostic.category-Globalization.severity = none
